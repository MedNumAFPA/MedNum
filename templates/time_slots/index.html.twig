{% extends 'base.html.twig' %}

{% block title %}TimeSlots index
{% endblock %}

{% block body %}
	<h1>TimeSlots index</h1>
	{% include "layouts/flash_message.html.twig" %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>From</th>
				<th>To</th>
				<th>Date</th>
				<th>Workshop</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for time_slot in time_slots %}
				<tr>
					<td>{{ time_slot.id }}</td>
					<td>{{ time_slot.name }}</td>
					<td>{{ time_slot.fromTime ? time_slot.fromTime|date('H:i:s') : '' }}</td>
					<td>{{ time_slot.toTime ? time_slot.toTime|date('H:i:s') : '' }}</td>
					<td>{{ time_slot.date ? time_slot.date|date('Y-m-d') : '' }}</td>
					<td>{{ time_slot.workshop.name }}</td>
					<td>
						{# <a href="{{ path('app_time_slots_show', {'id': time_slot.id}) }}">Show</a> #}
						<a href="{{ path('app_time_slots_edit', {'id': time_slot.id}) }}">Edit</a>
						<a href="{{ path('app_time_slots_delete', {'id': time_slot.id}) }}" onclick="return confirm('Are you sure you want to delete this slot?');">Delete</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_time_slots_new') }}">Create new</a>
{% endblock %}
