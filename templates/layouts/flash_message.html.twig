{% for type,messages in app.flashes(['success','danger','info'])%}
	{% for message in messages %}
		<div class="{{type == "success" ? 'bg-green-500' : type == "danger" ? 'bg-red-500' : 'bg-yellow-500' }} flex w-3xl rounded-xl justify-between items-center p-4">

			{{message}}
			<button class="button">close</button>
		</div>
	{% endfor %}
{% endfor %}
