{% extends 'base.html.twig' %}

{% block title %}Workshops{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-lg">
        <h1 class="text-2xl font-bold mb-6">Workshop Details</h1>

        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <table class="w-full text-sm text-gray-700">
                <tbody>
                    <tr class="border-b">
                        <th class="text-left py-2 font-semibold w-1/3">Id</th>
                        <td class="py-2">{{ workshop.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="text-left py-2 font-semibold">Name</th>
                        <td class="py-2">{{ workshop.name }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="text-left py-2 font-semibold">Description</th>
                        <td class="py-2">{{ workshop.description }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="text-left py-2 font-semibold">Max Slots</th>
                        <td class="py-2">{{ workshop.maxSlots }}</td>
                    </tr>
                    <tr>
                        <th class="text-left py-2 font-semibold">Room Number</th>
                        <td class="py-2">{{ workshop.roomNumber }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="flex justify-end space-x-2">
            <a href="{{ path('app_workshops_index') }}" 
                class=" px-2 py-1 bg-blue-500 text-white hover:bg-blue-300"> Retour
            </a>
            <a href="{{ path('app_workshops_edit', {'id': workshop.id}) }}" 
               class="px-2 py-1 bg-blue-500 text-white hover:bg-blue-300">
                Edit
            </a>
        </div>
         {{ include('workshops/_delete_form.html.twig') }}
    </div>
{% endblock %}
